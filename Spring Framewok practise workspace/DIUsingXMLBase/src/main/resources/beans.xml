<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

<bean class="com.bean.Employee" id="emp1" scope="singleton"></bean>

<bean class="com.bean.Employee" id="emp2" scope="prototype"></bean>

<bean class="com.bean.Employee" id="emp3">
	<constructor-arg  value="100"></constructor-arg>
	<constructor-arg  value="John"></constructor-arg>
	<constructor-arg  value="15000.10f"></constructor-arg>
</bean>

<bean class="com.bean.Employee" id="emp4">
	<property name="id" value="101"></property>
	<property name="salary" value="160000"></property>
		<property name="name" value="Ajay"></property>
</bean>



<bean class="com.bean.Address" id="add111">
	<property name="city" value="Bangalore"></property>
	<property name="state" value="Kar"></property>
</bean>

<bean class="com.bean.Address" id="add">
	<property name="city" value="Mumbai"></property>
	<property name="state" value="Mh"></property>
</bean>

<bean class="com.bean.Employee" id="employee1" autowire="byName">
		<property name="id" value="102"></property>
		<property name="name" value="Raju"></property>
		<property name="salary" value="56000"></property>
		
</bean>

</beans>
